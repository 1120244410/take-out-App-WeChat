/* pages/shopcar/shopcar.wxss */
view{
  box-sizing: border-box;
}
.main{
    width:100%;
    padding:24rpx;
    box-sizing: border-box;
}
.nothing{
    height:200rpx;
    font-size: 34rpx;
    color:rgba(0,0,0,0.3);
    text-align: center;
    line-height: 100rpx;
}
.main .list{
    width:100%;
    border-radius: 20rpx;
    padding:20rpx;
    box-shadow: 0 2rpx 2rpx 4rpx rgba(60,60,60,0.1);
    margin-bottom: 20rpx;
    box-sizing: border-box;
}
.main .list .title{
  width:100%;
  padding: 10rpx 0;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
    box-sizing: border-box;
}
.icon-shanchu:before{
  content: "\e658";
  color:#333;
}
.main .list>.info{
  width:100%;
  display: flex;
  align-items: center;
  position: relative;
}
.main .list>.info>.check-box{
  width:30rpx;
  height:30rpx;
  border-radius: 15rpx;
  border:1rpx solid rgba(0,0,0,0.3);
  margin-right: 20rpx;
}
.checked{
    background:#ecaa2b;
    border: none;
}
.main .list>.info navigator{
  width:200rpx;
  height:200rpx;
  padding:10rpx;
}
.main .list>.info navigator image{
  width:100%;
  height:100%;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.main .list>.info .desc{
  height:200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.main .list>.info .desc>text{
    font-size: 30rpx;
}
.main .list>.info .desc .price{
   color:#ec472b;
}
.main .list>.info .desc .right{
    height:40rpx;
    border: 1rpx solid rgba(0,0,0,0.3);
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    position: absolute;
    right:0;
    bottom:0;
}
.main .list>.info .desc .right .num{
    width:60rpx;
    text-align: center;
    line-height: 40rpx;
    border-left: 1rpx solid rgba(0,0,0,0.3);
    border-right: 1rpx solid rgba(0,0,0,0.3);
}
.main .list>.info .desc .right text{
    width:50rpx;
    height:40rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 40rpx;
}

footer{
    width:100%;
    height:98rpx;
    background-color: #ec472b;
    position: fixed;
    bottom: 0;
    z-index: 2;
    color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.icon-xuanze:before{
  content: "\e619";
  color:#fff;
}
.icon-xuanze-checked:before{
  content: "\e619";
  color:#ecaa2b;
}
footer .left{
    font-size: 28rpx;
    margin-left: 24rpx;
    display: flex;
    align-items: center;
}

footer .right{
    display: flex;
    align-items: center;
}
footer .count{
    font-size:34rpx;
}
footer .jump{
    width: 200rpx;
    height: 98rpx;
    color:white;
    background-color: #ecaa2b;
    font-size: 34rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 40rpx;
}