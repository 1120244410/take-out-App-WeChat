/* pages/sub-order/sub-order.wxss */
text{
  font-size: 26rpx;
}
.icon-youjiantou1:before{
  color:#fff;
  content: '\e628';
  font-size:26rpx;
}
.head{
	width:100%;
	height:186rpx;
	background-color: #ec472b;
	padding:0 26rpx;
  box-sizing: border-box;
}
.head navigator{
  width:100%;
  height:100%;
  color:#fff;
}
.head navigator view{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head navigator text{
  font-size: 24rpx;
}

.detail{
  width:100%;
  padding:24rpx;
  box-sizing: border-box;
}
.bord{
  width:100%;
  border:1rpx solid #ec2b2b;
  border-radius: 10rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
	padding: 15rpx 34rpx;
}
.bord .icon-youjiantou1:before{
  color:#ec2b2b;
  content: '\e628';
  font-size:26rpx;
}
.bord>view{
  width:100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bord>navigator{
  width:100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bord .every{
  display: flex;
  justify-content: unset;
  padding:10rpx 0;
}
.bord .every image{
  width:120rpx;
  height:120rpx;
}
.bord .every .info{
  height:100%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-left: 20rpx;
}
.orange{
  color:#ec472b;
}

.blank{
    width:100%;
    height:140rpx;
}
.bottom-bar{
	width:100%;
	height:98rpx;
	background-color: #ec472b;
	position: fixed;
	bottom: 0;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 34rpx;
	color: white;
	z-index: 2;
	padding-left: 24rpx;
  box-sizing: border-box;
}

.bottom-bar>.buyCar>.iconfont{
	font-size: 60rpx;
}
.bottom-bar>.buyCar>.count{
	width:40rpx;
	height:40rpx;
	border-radius: 50%;
	background-color: #ec2b2b;
	position: absolute;
	left: 96rpx;
	top:76rpx;
	font-size: 20rpx;
	line-height: 40rpx;
	text-align: center;
}
.bottom-bar>.jiesuan{
	width: 200rpx;
	height: 98rpx;
	background-color: #ecaa2b;
	display: flex;
	justify-content: center;
	align-items: center;
    color:white;
    font-size: 34rpx;
}