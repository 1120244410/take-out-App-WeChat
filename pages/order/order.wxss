.notice {
  width: 100%;
  margin: 100rpx auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.notice text {
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.4);
  margin-bottom: 40rpx;
}

.notice navigator {
  font-size: 30rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  background: #ecc12b;
  border-radius: 20rpx;
}

.order-info {
  width: 100%;
  padding: 30rpx 24rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.order-info >.bg-bar {
  width: 708rpx;
  height: 340rpx;
  background-size: 100% 100%;
  padding: 0 34rpx 34rpx;
  display: flex;
  flex-wrap: wrap;
}

.order-info >.bg-bar>.top {
  width: 100%;
  height: 12%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: rgba(0, 0, 0, 0.4);
}

.order-info >.bg-bar>.top text {
  font-size: 26rpx;
}

.order-info >.bg-bar>.top navigator {
  color: #ec472b;
  font-size: 22rpx;
}

.left {
  width: 165rpx;
  height: 88%;
  padding: 36rpx 34rpx 0 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: space-between;
  box-sizing: border-box;
}

.left>image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  background-size: cover;
  overflow: hidden;
}

.left>text:nth-child(2) {
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.4);
}

.left>text:nth-child(3) {
  width: 100%;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: -webkit-linear-gradient(left, #ecaa2b, #ec482b);
  text-align: center;
  color: white;
  line-height: 48rpx;
}

.right {
  width: 425rpx;
  height: 88%;
  padding: 36rpx 0 0 34rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: rgba(0, 0, 0, 0.4);
  box-sizing: border-box;
  position: relative;
}

.right text {
  font-size: 26rpx;
}

.right>text:nth-child(1) {
  width: 390rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.right>text:nth-child(2) {
  width: 318rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.2);
}

.right>view {
  width: 318rpx;
  margin-top: 32rpx;
  color: #80f2f4;
  display: flex;
  flex-wrap: wrap;
}

.right>view>text {
  font-size: 24rpx;
}

.right>text:nth-child(4) {
  font-size: 34rpx;
  color: #ec472b;
  position: absolute;
  right: 0;
  bottom: 60rpx;
}

.arrow {
  width: 44rpx;
  height: 268rpx;
  line-height: 268rpx;
  display: flex;
  justify-content: flex-end;
}

.arrow>i {
  font-size: 34rpx;
  color: rgba(0, 0, 0, 0.2);
}

.biao-r, .biao-g {
  width: 86rpx;
  height: 110rpx;
  background-size: 100% 100%;
  position: relative;
  left: 554rpx;
  top: -38rpx;
}

.shangla {
  width: 100%;
  height: 178rpx;
  font-size: 22rpx;
  color: rgba(0, 0, 0, 0.4);
  background-color: white;
  text-align: center;
  line-height: 80rpx;
}
