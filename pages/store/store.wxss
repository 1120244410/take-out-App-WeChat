.icon-xiajiantou:before{
  content: '\e642';
  color:#ec472b;
  font-size: 20rpx;
}

view{
  box-sizing: border-box;
}
.main{
  width:100%;
    padding:0 24rpx;
}
.main .slideCover{
    width:100%;
    padding:10rpx 0;
    border-bottom: 1rpx solid #ec472b
}
.slideCover .slideType{
    width:100%;
    display: -webkit-box;
    overflow-x: auto;
}
::-webkit-scrollbar{
    display: none;
}
.slideCover .slideType view{
    height:60rpx;
    width:100rpx;
    border-radius: 30rpx;
    background:#ec472b;
    font-size: 24rpx;
    margin-right: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.slideCover .slideType view text{
    color:#fff;
}

.main .filter{
    width:100%;
    height:auto;
    padding:10rpx 0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1rpx solid rgba(0,0,0,0.3);
}
.main .filter view{
    width:20%;
    font-size: 28rpx;
    color:#666;
    display: flex;
    align-items: center;
    justify-content: center;
}
.main .filter view .filter-title{
  margin-right: 10rpx;
}
.main .filter view image{
    width:20rpx;
}

.main .list{
    width:100%;
    padding:10rpx 0;
}
.main .list .storeInfo{
    width:100%;
    display: flex;
    padding:20rpx 10rpx;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.1);
}
.main .list .storeInfo .left{
    width:160rpx;
    height:160rpx;
    overflow: hidden;
    margin-right: 10rpx;
}
.main .list .storeInfo .left image{
  width:100%;
    height:100%;
}
.main .list .storeInfo .right{
    width:78%;
    height:160rpx;
    overflow: hidden;
    font-size: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding:10rpx 0;
}
.main .list .storeInfo .right .storeName{
    font-size: 30rpx;
}
.main .list .storeInfo .right .description{
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    color:rgba(0,0,0,0.4);
}
.main .list .storeInfo .right .collection{
    display: flex;
}
.main .list .storeInfo .right .collection text{
    font-size: 24rpx;
}
.main .list .storeInfo .right .collection .segmentation{
    margin:0 10rpx;
    color:rgba(0,0,0,0.3);
}