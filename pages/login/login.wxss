.all{
	width:100%;
	height:auto;
	padding:0 24rpx;
	display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.all>.panel{
	width:88%;
	min-height:400rpx;
	padding:36rpx 48rpx;
	margin-top:160rpx;
  box-sizing: border-box;
}
.all>.panel .itme{
	width:100%;
	height:80rpx;
	display: flex;
	align-items: center;
  justify-content: space-between;
}
.all>.panel text{
	font-size: 30rpx;
	color: rgba(0,0,0,0.4);
}
.all>.panel input{
	width: 90%;
	height:100%;
	font-size: 24rpx;
	color: rgba(0,0,0,0.4);
	border-bottom: 1rpx solid rgba(0,0,0,0.2);
	padding-left: 20rpx;
}
.msg{
    justify-content: space-between;
}
.all>.panel .itme>.find-back{
	color:red;
	font-size: 30rpx;
}
.button{
	width:400rpx;
	height:68rpx;
	box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.2);
	margin-top:50rpx;
	border-radius: 30rpx;
	background:#ec472b;
	color:white;
	font-size:30rpx;
}
.all>.other-login{
	width:100%;
	text-align: center;
	font-size: 24rpx;
	color:rgba(0,0,0,0.4);
	margin-top: 80rpx;
}
.all>.icon-three{
	width:70%;
	height:140rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding:40rpx 70rpx;
}
.all>.icon-three>text{
	font-size: 80rpx;
}
.all>.info{
	width:100%;
	font-size: 24rpx;
	color:rgba(0,0,0,0.4);
	display: flex;
	align-items: center;
	justify-content: center;
	margin-top: 20rpx;
}