  </navigator>
  <navigator class='list'>
    <view>
      <text class='iconfont icon-collection-b'></text>
      <text>我的收藏</text>
    </view>
    <text class='iconfont icon-youjiantou1'></text>
  </navigator>
  <navigator class='list'>
    <view>
      <text class='iconfont icon-youhuiquan'></text>
      <text>礼券中心</text>
    </view>
    <text class='iconfont icon-youjiantou1'></text>
  </navigator>
  <navigator class='list'>
    <view>
      <text class='iconfont icon-pingjia-'></text>
      <text>我的评价</text>
    </view>
    <text class='iconfont icon-youjiantou1'></text>
  </navigator>
  <navigator class='list'>
    <view>
      <text class='iconfont icon-kefu-tianchong'></text>
