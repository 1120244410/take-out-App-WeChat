<!-- person.html -->
<view class='head'>
  <view class='bg' style='background:url(http://localhost:3000/images/my-bg.png)'>
    <view class="my-panel">
    <view class='my-info'>
      <image src='http://localhost:3000{{userinfo.headpic}}'></image>
      <view class='detail'>
        <view class="layer">
          <text>{{userinfo.nickname}} ♂</text>
          <text class="iconfont icon-icon-" bindtap='isLogin'></text>
        </view>
        <view class='layer buttom'>
          <text style="color:#ecc12b">{{userinfo.level}}级吃货</text>
        </view>
      </view>
    </view>
    <view class='my-money'><navigator>余额 {{userinfo.money}}</navigator></view>
    <view class='my-check'>礼券 {{userinfo.vouchers}}个</view>
  </view>
  </view>
</view>
<view class='options'>
  <navigator class='list' url='/pages/shopcar/shopcar'>
    <view>
      <text class='iconfont icon-dingdan'></text>
