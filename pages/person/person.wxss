
.head{
  width:100%;
	height:410rpx;
	border-bottom: 10rpx solid rgba(0,0,0,0.2);
	display: flex;
	flex-wrap: wrap;
}
.head .bg{
  box-sizing: border-box;
  width:100%;
	height:276rpx;
	background-size: 100% 276rpx;
	padding:40rpx 24rpx 0;
}
.my-panel{
	width:100%;
	height:320rpx;
	border-radius: 30rpx;
	overflow: hidden;
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	line-height: 80rpx;
	color:white;
  box-sizing: border-box;
}
.my-info{
  width:100%;
	background-color: white;
	padding:60rpx 50rpx;
	display: flex;
	justify-content: space-between;
}
.my-info image{
  width:120rpx;
	height:120rpx;
	background-size: 120rpx 120rpx;
	margin-right: 50rpx;
}
.my-info .detail{
  width:72%;
	height:120rpx;
	display: flex;
	flex-wrap: wrap;
	color:#333;
}
.my-info .detail .layer{
  width:100%;
	height:50%;
  font-size: 30rpx;
	color:#333;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 1rpx solid rgba(0,0,0,0.2);
}
.my-info .detail .buttom{
	border-bottom: unset;
}
.icon-icon-:before{
  content: '\e624';
  color:#333;
}
.my-money,.my-check{
  width:50%;
	height:80rpx;
  font-size:28rpx;
	background-color: #ec472b;
	border-right: 1rpx solid white;
  box-sizing: border-box;
}
.my-check{
  border: unset;
}

.options{
  width:100%;
  padding:0 24rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.options .list{
  width:100%;
  height:100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom:1rpx solid rgba(0,0,0,0.1);
}
.options .list text{
  font-size:30rpx;
}
.options .list view text{
  margin-right: 20rpx;
}
